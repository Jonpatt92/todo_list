<h2>All your Tasks</h2>

<h4>Incomplete Tasks</h4>
<section id='incomplete-tasks'>
  <ul>
    {% for todo in incompleteTodos %}
      <li id='incomplete-task'>
        Task: <a href="{{ path('todo_show', {id: todo.id}) }}">{{ todo.task }}</a><br>
        Status: {{todo.status}}
      </li>
    {% endfor %}
  </ul>
</section>

<h4>Completed Tasks</h4>
<section id='complete-tasks'>
  <ul>
    {% for todo in completeTodos %}
      <li id='complete-task'>
        Task: <a href="{{ path('todo_show', {id: todo.id}) }}">{{ todo.task }}</a><br>
        Status: {{todo.status}}
      </li>
    {% endfor %}
  </ul>
</section>
